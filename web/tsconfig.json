{
  "compilerOptions": {
    "outDir": "./tsdist/",
    "moduleResolution": "node",
    "module": "es6",
    "target": "es2017",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "lib":[
      "es2015",
      "dom",
      "dom.iterable",
      "es6",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.tsx"
  ],
  "exclude": [
    "node_modules/",
    "**/*.spec.ts"
  ]
}